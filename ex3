#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <math.h>
#define X 3

typedef struct{
	char nome[50];
	float nota[X];
}Estudante;

float mediaNotas(Estudante e){
	float soma = 0;
	int i;
	
	for(i = 0; i < X; i++){

	soma += e.nota[i];
	}

	return soma / 3;
}

int main(void) {
	
	int i;
	Estudante estudante [X];
	
	printf("Digite Nome Do Estudante: ");
	scanf(" %50[^\n]", &estudante[0].nome);
	fflush(stdin);
	
	for(i = 0; i < X; i++){
	
	printf("Digite a nota %d: ");
	scanf("%f", &estudante[0].nota[i]);
	}
	
	float media = mediaNotas(estudante);
	
	printf("A media do Estudante %s e : %.2f", estudante[0].nome, media);
	
    return 0;
}
